{
  "autoload": {
    "psr-4": {
      "Main\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "slim/slim": "4.*",
    "slim/psr7": "^1.5",
    "php-di/slim-bridge": "^3.2",
    "php-di/php-di": "^6.4",
    "doctrine/mongodb-odm": "*"
  },
  "scripts": {
    "bootstrap" : "php -S localhost:8080 -t src src/index.php"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "jangregor/phpstan-prophecy": "^1.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.1"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": false
    }
  }
}
